<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>



<table>
  <thead>
    <tr>
      <th><%=t('comment')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |cmt| %>
      <tr>
        <td><%= cmt.content %></td>
        <td><%=time_ago_in_words(cmt.created_at) + t('ago')%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('add_a_new_comment'), new_comment_path(@post)%>




<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
